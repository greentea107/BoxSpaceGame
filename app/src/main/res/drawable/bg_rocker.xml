<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="120dp"
        android:height="120dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>
    <item
        android:width="120dp"
        android:height="120dp"
        android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="25dp"
                android:color="#3699" />
        </shape>
    </item>
    <item
        android:width="30dp"
        android:height="30dp"
        android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="@color/white" />
            <solid android:color="#3fff" />
        </shape>
    </item>
</layer-list>